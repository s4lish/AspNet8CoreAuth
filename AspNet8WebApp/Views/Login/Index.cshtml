@model CredentialViewModel
@{
}

<style>
    html,
    body {
        height: 100%;
    }

    .form-signin {
        max-width: 330px;
        padding: 1rem;
    }

        .form-signin .form-floating:focus-within {
            z-index: 2;
        }

        .form-signin input[type="email"] {
            margin-bottom: -1px;
            border-bottom-right-radius: 0;
            border-bottom-left-radius: 0;
        }

        .form-signin input[type="password"] {
            margin-bottom: 10px;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }
</style>

<div class="form-signin w-100 m-auto">
    <form method="post">
@*         @Html.AntiForgeryToken()
 *@        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

        <div class="form-floating">
            <input asp-for="Username" class="form-control" id="floatingInput" placeholder="Username">
            <label for="floatingInput">Username</label>
        </div>
        <span asp-validation-for="Username" class="text-danger"></span>
        <div class="form-floating">
            <input asp-for="Password" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Password</label>
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>

        <div class="form-check text-start my-3">
            <input class="form-check-input" type="checkbox" asp-for="RememberMe">
            <label class="form-check-label" asp-for="RememberMe">
                Remember me
            </label>
        </div>
        <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
        @Html.ValidationSummary("", new { @class = "text-danger" })

        @if (ViewBag.Errors != null)
        {
            <ul>
                @foreach (string item in ViewBag.Errors)
                {
                    <li class="text-danger">@item</li>
                }

            </ul>
        }
        <p class="mt-5 mb-3 text-body-secondary">&copy; 2023</p>
    </form>
</div>


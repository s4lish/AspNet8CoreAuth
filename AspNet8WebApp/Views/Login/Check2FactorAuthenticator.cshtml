@{
}

<p>please enter code generated in two factor authenticator app:</p>
<form method="post">
    <input asp-for="RememberMe" type="hidden" />
    <div class="mb-3 row">
        <div class="col-2">
            <label for="Code">OTP Code</label>
        </div>
        <div class="col-5">
            <input asp-for="Code" class="form-control" placeholder="Code">
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <button class="btn btn-primary py-2" type="submit">Check 2FA</button>
            @Html.ValidationSummary("", new { @class = "text-danger" })
        </div>

    </div>
</form>